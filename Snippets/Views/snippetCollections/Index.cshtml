@model IEnumerable<Snippets.Models.snippetCollection>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MasonLayout.cshtml";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/hover.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/animate.css" />
    @Scripts.Render("~/bundles/parallax")
</head>

<div id="header-wrapper" data-parallax="scroll" data-position="top" data-bleed="10" data-image-src="Images/topDown.jpg" data-natural-width="2600" data-natural-height="1200" style="height: 12em"></div>
<br />
<br />
<div class="container">
    <a href="/snippetCollections/Create" id="snipButton">Create</a>
</div>
<br />
<br />
<hr />
<div class="container">
    <div id="contentP" class="contentP">
        @foreach (var item in Model)
        {
            <br />
            <br />
            <div class="tileItemP text-center">
                <div class="hvr-grow-shadow">
                    <p>@item.Title</p>
                    <a href="@Url.Action("Details", new { id = item.ID })"><img style="height:150px; width:11.6em;" src="~/Images/snippet.jpg" /></a>
                    <br />
                    <a class="button" href="@Url.Action("MakePublic", new { id = item.ID })">Publish</a>
                    <br />
                    <a href="@Url.Action("Delete", new { id = item.ID })">Delete</a>
                    <br />
                    
                    <br />

                    @*<iframe src="http://www.google.com"></iframe>*@

                   

                </div>
            </div>
        }
    </div>
</div>

<script>
$(document).ready(function() {

    var $container = $('#contentP');
    $container.masonry({
        columnWidth: 200,
        itemSelector: '.tileItemP',
        isFitWidth: true,
        isAnimated: !Modernizr.csstransitions
    })
    var $children = $container.children();
    $children.addClass("animated zoomIn");

});
</script>
